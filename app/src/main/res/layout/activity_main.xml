<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_text_margin_top"
        android:layout_marginBottom="5dp"
        android:textSize="@dimen/main_text_size"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:layout_marginTop="@dimen/main_text_margin_top"
        android:layout_marginBottom="@dimen/main_text_margin_bottom"
        android:textSize="@dimen/main_text_size"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_marginTop="@dimen/main_text_margin_top"
        android:layout_marginBottom="@dimen/main_text_margin_bottom"
        android:textSize="@dimen/main_text_size"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_marginTop="@dimen/main_text_margin_top"
        android:layout_marginBottom="@dimen/main_text_margin_bottom"
        android:textSize="@dimen/main_text_size"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_marginTop="@dimen/main_text_margin_top"
        android:layout_marginBottom="@dimen/main_text_margin_bottom"
        android:textSize="@dimen/main_text_size"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/main_button_margin_top"
        android:layout_marginBottom="@dimen/main_button_margin_bottom"
        android:onClick="launchSecondActivity"
        android:text="@string/main_button_text"
        android:textAlignment="center" />


</RelativeLayout>